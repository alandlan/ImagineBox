{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                                                   
    "outDir": "./dist",                             
    "strict": true,                                                
    "resolveJsonModule": true,      
    "esModuleInterop": true,                        
    "experimentalDecorators": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true        
  }
}
